<div class="container">
  <h2 class="text-info mt-5 mb-3">顧客情報</h2>

  <table class="table">
    <tr>
      <th>名前</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>名前（カナ）</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td>〒<%= @customer.postal_code.insert(3, "-") %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.telephone_number.insert(3, "-").insert(8, "-") %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>退会ステータス</th>
      <td>
        <% if @customer.is_deleted == false %>
          <p>有効</p>
        <% else %>
          <p>退会</p>
        <% end %>
      </td>
    </tr>
  </table>

  <div><%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-outline-info" %></div>
</div>