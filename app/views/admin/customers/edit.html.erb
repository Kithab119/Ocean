<h2><%= @customer.last_name %> <%= @customer.first_name %>さんの顧客情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
  <table>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th>名前（カナ）</th>
      <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <th>退会ステータス</th>
      <td><%= f.radio_button :is_deleted, :false %>有効 <%= f.radio_button :is_deleted, :true %>退会</td>
    </tr>
  </table>
  <div><%= f.submit "更新する" %></div>
<% end %>

