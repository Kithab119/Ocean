<div class="container">
  <h1 class="text-info mt-5 mb-3">ジャンル</h1>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.id %></td>
          <td><%= genre.theme %></td>
          <td><%= link_to "削除", admin_genre_path(genre.id), data: { confirm: "削除しますか?" }, method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <p class="text-info mb-3"><strong>新規登録</strong><span class="ml-2"><%= f.text_field :theme %></span></p>
    <div><%=f.submit "登録する", class: "btn btn-outline-info" %></div>
  <% end %>