<div class="container">
  <h1 class="text-info mt-5 mb-3">作家情報</h1>

  <table class="table">
    <tr>
      <th>名前</th>
      <td><%= @creator.name %></td>
    </tr>
    <tr>
      <th>プロフィール</th>
      <td><%= @creator.profile %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td>〒<%= @creator.postal_code.insert(3, "-") %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @creator.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @creator.telephone_number.insert(3, "-").insert(8, "-") %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @creator.email %></td>
    </tr>
    <tr>
      <th>退会ステータス</th>
      <td>
        <% if @creator.is_deleted == false %>
          <p>有効</p>
        <% else %>
          <p>退会</p>
        <% end %>
      </td>
    </tr>
  </table>

  <div><%= link_to "編集する", edit_admin_creator_path(@creator.id), class: "btn btn-outline-info" %></div>
</div>