<div class="container">
  <h2 class="text-info mt-5 mb-3">サイズ</h2>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>サイズ</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sizes.each do |size| %>
        <tr>
          <td><%= size.id %></td>
          <td><%= size.large %></td>
          <td><%= link_to "削除", admin_size_path(size.id), data: { confirm: "削除しますか?" }, method: :delete, class: "btn btn-outline-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= form_with model: @size, url: admin_sizes_path, method: :post do |f| %>
    <p class="text-info mb-3"><strong>新規登録</strong><span class="ml-2"><%= f.text_field :large %></span></p>
    <div><%=f.submit "登録する", class: "btn btn-outline-info" %></div>
  <% end %>