<div class="container">
  <h2 class="text-center text-info mt-5 mb-3">管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row ">
      <div class="col-6">
        メールアドレス
      </div>
      <div class="col-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>

        </div>

        <div class="field mb-3">
          パスワード　<%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <%# if devise_mapping.rememberable? %>
          <!--div class="field"-->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <!--/div-->
        <%# end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-info" %>
        </div>
      <% end %>

      <div class="mt-5">
        <%= render "admin/shared/links" %>
      </div>
</div>
