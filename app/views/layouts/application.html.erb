<!DOCTYPE html>
<html>
  <head>
    <title>Ocean</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav>
        <% if admin_signed_in? %>
          <ul>
            <li><%= link_to "作家一覧", admin_root_path %></li>
            <li><%= link_to "顧客一覧", admin_customers_path %></li>
            <li><%= link_to "カラー", admin_colors_path %></li>
            <li><%= link_to "サイズ", admin_sizes_path %></li>
            <li><%= link_to "ジャンル", admin_genres_path %></li>
            <li><%= link_to "スタイル", admin_styles_path %></li>
            <li><%= link_to "注文一覧", admin_orders_path %></li>
            <li><%= link_to "ログアウト", destroy_admin_session_path %></li>
          </ul>
        <% elsif creator_signed_in? %>
          <ul>
            <li><%= link_to "Ocean", creator_root_path %></li>
          </ul>
          <ul>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "商品一覧", creator_items_path %></li>
            <li><%= link_to "マイページ", creator_creators_path %></li>
            <li><%= link_to "オーダー情報", creator_makings_path %></li>
            <li><%= link_to "ログアウト", destroy_creator_session_path %></li>
          </ul>
        <% elsif customer_signed_in? %>
          <ul>
            <li><%= link_to "Ocean", root_path %></li>
          </ul>
          <ul>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "作家一覧", creators_path %></li>
            <li><%= link_to "商品一覧", items_path %></li>
            <li><%= link_to "マイページ", customers_path %></li>
            <li><%= link_to "カート", cart_items_path %></li>
            <li><%= link_to "注文一覧", orders_path %></li>
            <li><%= link_to "配送先", addresses_path %></li>
            <li><%= link_to "オーダー情報", makings_path %></li>
            <li><%= link_to "ログアウト", destroy_customer_session_path %></li>
          </ul>
        <% else %>
          <ul>
            <li><%= link_to "Ocean", root_path %></li>
          </ul>
          <ul>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "ログイン", new_customer_session_path %></li>
            <li><%= link_to "新規登録", new_customer_registration_path %></li>
            <li><%= link_to "作家ログイン", new_creator_session_path %></li>
            <li><%= link_to "作家登録", new_creator_registration_path %></li>
          </ul>
        <% end %>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
