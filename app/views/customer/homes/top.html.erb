<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="text-info mt-5 mb-3">Welcome to Ocean</h2>
      <div class="row">
        <div class="col-3"><%= render 'customer/items/serch' %></div>
        <div class="col-9 row">
          <% @items.each do |item| %>
            <div class="col-4 h-50 mb-3">
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.image, class: "mw-100 mh-100 mb-3" %>
              <% end %>
              <table>
                <tr>
                  <th class="font-weight-lighter">作品名</th>
                  <td>「<strong><%= link_to item.name, item_path(item.id), class: "text-info" %></strong>」</td>
                </tr>
                <tr>
                  <th class="font-weight-lighter">価格</th>
                  <td><strong>¥<%= (item.price * 1.1).floor.to_s(:delimited) %></strong></td>
                </tr>
                <tr>
                  <% if item.is_active == true %>
                    <th class="text-info"><strong>販売中</strong></td>
                  <% else %>
                    <th class="text-danger"><strong>未販売</strong></td>
                  <% end %>
                </tr>
              </table>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>