<div class="container">
  <div class="row" style="place-content: center">
    <div class="col-12">
      <h2 class="text-info mt-5 mb-3">Welcome to Ocean</h2>
    </div>

    <div class="col-md-3 col-sm-12"><%= render 'customer/items/serch' %></div>

    <div class="col-9 row">
      <% @items.each do |item| %>
        <div class="col-md-4 col-sm-12 h-50 mb-3">
          <%= link_to item_path(item.id) do %>
            <%= image_tag item.get_image, class: "mw-100 mh-100 mb-3" %>
          <% end %>

          <p class="mb-1">作品名<span>「<%= link_to item.name, item_path(item.id), class: "text-info" %>」</span></p>
          <p class="mb-1">価格<span>　 ¥<%= (item.price * 1.1).floor.to_s(:delimited) %></span></p>
          <% if item.is_active == true %>
            <p class="text-info"><strong>販売中</strong></p>
          <% else %>
            <p class="text-danger"><strong>未販売</strong></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>