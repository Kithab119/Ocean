<div class="container">
  <div class="row">
    <h2 class="text-info mt-5 mb-5">マイページ</h2>
  </div>

  <div class="row">
    <div class="col-2">
      <p>名前</p>
      <p>名前（カナ）</p>
      <p>郵便番号</p>
      <p>住所</p>
      <p>電話番号</p>
      <p>メールアドレス</p>
    </div>

    <div class="col-6">
      <p><strong><%= @customer.last_name %> <%= @customer.first_name %></strong></p>
      <p><strong><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></strong></p>
      <p><strong>〒<%= @customer.postal_code.insert(3, "-") %></strong></p>
      <p><strong><%= @customer.address %></strong></p>
      <p><strong><%= @customer.telephone_number.insert(3, "-").insert(8, "-") %></strong></p>
      <p><strong><%= @customer.email %></strong></p>
    </div>
  </div>

  <div class="mt-3"><%= link_to "編集する", edit_customers_path, class: "btn btn-outline-info" %></div>
  <div class="mt-3"><%= link_to "退会する", customers_out_path, class: "btn btn-danger" %></div>
</div>