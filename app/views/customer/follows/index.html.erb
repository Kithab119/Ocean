<div class="container">
  <div class="row">
    <h1 class="text-center text-info mt-5 mb-3">フォロー作家一覧</h1>
  </div>

  <div class="row">
    <% @follows.each do |follow| %>
      <div class="col-4">
        <div class="card">
          <div class="row">
            <div class="col-4 mb-2"><%= image_tag follow.creator.get_profile_image(100, 100) %></div>
            <div class="col-7 mt-5 text-right"><%= link_to "フォロー解除", follow_path(follow.id), method: :delete, data: { confirm: "フォローを解除しますか?" }, class: "btn btn-outline-danger" %></div>
          </div>
          <div id="star-rate<%= follow.creator.id %>", class="ml-2"></div>
            <script>
              $('#star-rate<%= follow.creator.id %>').empty();
              $('#star-rate<%= follow.creator.id %>').raty({
                size      : 36,
                starOff   : '<%= asset_path('star-off.png') %>',
                starOn    : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                half      : true,
                readOnly: true,
                score: <%= follow.creator.reviews.average(:star).to_f.round(1) %>
              });
            </script>
          <div class="card-body">
            <h5 class="card-title"><strong><%= link_to follow.creator.name, creator_path(follow.creator.id), class: "text-info" %></strong></h5>
            <p class="card-text"><%= follow.creator.profile.truncate(20) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>