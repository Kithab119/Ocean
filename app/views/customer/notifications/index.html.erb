<div class="container">
  <h1 class="text-info mt-5 mb-3">通知</h1>

  <% @notifications.each do |notification| %>

    <% if notification.action == "Room" %>
      <div class="row mt-3">
        <% if notification.checked == false %>
          <div class="col-1 text-danger">
            new!
          </div>
          <div class="col-6">
            <strong><%= notification.room.making.creator.name %>さんからメッセージが届きました!</strong>
          </div>
          <div class="col-3 text-info">
            <%= notification.created_at.strftime("%y/%m/%d %H:%M:%S") %>
          </div>
          <div class="col-2">
            <%= link_to "確認", notifications_check_path(notification_id: notification.id), class: "btn btn-outline-info" %>
          </div>
        <% else %>
          <div class="col-1"></div>
          <div class="col-6">
            <strong><%= notification.room.making.creator.name %>さんからメッセージが届きました!</strong>
          </div>
          <div class="col-3 text-info">
            <%= notification.created_at.strftime("%y/%m/%d %H:%M:%S") %>
          </div>
          <div class="col-2">
            <%= link_to "確認", room_path(notification.room.id), class: "btn btn-outline-info" %>
          </div>
        <% end %>
      </div>

    <% elsif notification.action == "Send" %>
      <div class="row mt-3">
        <% if notification.checked == false %>
          <div class="col-1 text-danger">
            new!
          </div>
          <div class="col-6">
            <strong>「<%= notification.item.name %>」が発送されました!</strong>
          </div>
          <div class="col-3 text-info">
            <%= notification.created_at.strftime("%y/%m/%d %H:%M:%S") %>
          </div>
          <div class="col-2">
            <%= link_to "確認", notifications_check_path(notification_id: notification.id), class: "btn btn-outline-info" %>
          </div>
        <% else %>
          <div class="col-1"></div>
          <div class="col-6">
            <strong>「<%= notification.item.name %>」が発送されました!</strong>
          </div>
          <div class="col-3 text-info">
            <%= notification.created_at.strftime("%y/%m/%d %H:%M:%S") %>
          </div>
          <div class="col-2">
            <%= link_to "確認", order_path(notification.order.id), class: "btn btn-outline-info" %>
          </div>
        <% end %>
      </div>
    <% end %>

  <% end %>
</div>