<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="text-center text-info mt-5 mb-3"><strong>「<%= @item.name %>」</strong></h2>
      <div class="text-center">
        <div><%= image_tag @item.image, :size => '300x300' %></div>
        <h3 class="text-info mt-5 mb-3">作品情報</h3>
        <p class="mb-5"><strong><%= @item.introduction %></strong></p>
        <table class="table">
          <thead>
            <tr>
              <th class="font-weight-lighter">カラー</th>
              <th class="font-weight-lighter">サイズ</th>
              <th class="font-weight-lighter">ジャンル</th>
              <th class="font-weight-lighter">スタイル</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-info"><strong><%= @item.color.name %></strong></td>
              <td class="text-info"><strong><%= @item.size.large %></strong></td>
              <td class="text-info"><strong><%= @item.genre.theme %></strong></td>
              <td class="text-info"><strong><%= @item.style.where %></strong></td>
            </tr>
          </tbody>
        </table>
        <table>
          <tr>
            <th class="font-weight-lighter">価格</th>
            <td><strong>¥<%= (@item.price * 1.1).floor.to_s(:delimited) %></strong></td>
          </tr>
          <tr>
            <% if @item.is_active == true %>
              <td class="text-info"><strong>販売中</strong></td>
            <% else %>
              <td class="text-danger"><strong>未販売</strong></td>
            <% end %>
          </tr>
        </table>
        <%= form_with model: @cart_item, url: cart_items_path(@cart_item.id), method: :post do |f| %>
          <%= f.hidden_field :customer_id, :value => current_customer.id %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <div class="text-center"><%= f.submit "カートに入れる", class: "btn btn-outline-info" %></div>
        <% end %>
      </div>