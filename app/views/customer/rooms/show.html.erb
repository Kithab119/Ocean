<h2>DM</h2>

<% @room.messages.each do |message| %>
  <%= message.letter %>
  
  <% if message.customer_id == current_customer.id %>
    <%= link_to "削除", message_path(message.id), method: :delete %>
  <% end %>
<% end %>

<%= form_with model: @message, url: messages_path, method: :post do |f| %>
  <%= f.text_area :letter %>
  <%= f.hidden_field :room_id, :value => @room.id %>
  <%= f.submit "送信" %>
<% end %>