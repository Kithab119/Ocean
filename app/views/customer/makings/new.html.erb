<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center text-info mt-5 mb-3">オーダー情報入力</h1>
    </div>

    <div class="col-12">
      <%= form_with model: @making, url: creator_makings_path, method: :post do |f| %>

        <div class="row mb-3">
          <div class="col-3 text-info text-right"><strong>カラー</strong></div>
          <div class="col-9"><%= f.select :color, options_for_select(["赤", "オレンジ", "黄", "緑", "青", "紫", "ピンク", "茶", "白", "グレー", "黒"]) %></div>
        </div>

        <div class="row mb-3">
          <div class="col-3 text-info text-right"><strong>サイズ</strong></div>
          <div class="col-9">
            <div class="d-flex mb-3">
              <div><%= f.radio_button :size_select, "0" %></div>
              <div><%= f.select :size_option1, options_for_select(["F", "P", "M", "S"]) %>サイズ</div>
              <div><%= f.select :size_option2, options_for_select(["0", "1", "SM", "2", "3", "4", "5", "6", "8", "10", "12", "15", "20", "25", "30", "40", "50", "60", "80", "100", "120", "130", "150", "200", "300", "500"]) %>号</div>
            </div>
            <div class="d-flex">
              <div><%= f.radio_button :size_select, "1" %></div>
              <div>(縦)<%= f.text_field :size_y %>mm x (横)<%= f.text_field :size_x %>mm</div>
            </div>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-3 text-info text-right"><strong>ジャンル</strong></div>
          <div class="col-9"><%= f.select :genre, options_for_select(["風景画", "静物画", "肖像画", "博物画", "デフォルメ", "かっこいい", "かわいい", "シンプル", "アカデミック"]) %></div>
        </div>

        <div class="row mb-3">
          <div class="col-3 text-info text-right"><strong>スタイル</strong></div>
          <div class="col-9"><%= f.select :style, options_for_select(["玄関", "寝室", "テレビ台", "リビング", "階段", "廊下"]) %></div>
        </div>

        <div class="row mb-3">
          <div class="col-3 text-info text-right"><strong>要望</strong></div>
          <div class="col-9"><%= f.text_area :request %></div>
        </div>

        <div class="row mb-3">
          <div class="col-3 text-info text-right"><strong>希望価格</strong></div>
          <div class="col-9"><%= f.text_field :price %></div>
        </div>

        <div class="text-center mt-5"><%= f.submit "オーダーを確定する", class: "btn btn-outline-info" %></div>

      <% end %>
    </div>
  </div>
</div>