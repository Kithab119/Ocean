<h2>カート</h2>

<div><%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete %></div>

<table>
  <thead>
    <tr>
      <th>イメージ</th>
      <th>作品名</th>
      <th>価格（税抜き）</th>
      <th>販売情報</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= image_tag cart_item.item.image, :size => '100x100' %></td>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
        <% if cart_item.item.is_active == true %>
          <td>販売中</td>
        <% else %>
          <td>未販売</td>
        <% end %>
        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div><%= link_to "他の作品も見る", root_path %></div>
<% if !@cart_items.empty? %>
  <%= link_to "情報入力に進む", new_order_path %>
<% end %>