<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2 class="text-info mt-5">ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field mt-3 mb-3">
          <span class="col-6">メールアドレス</span><span class="col-6"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
        </div>

        <div class="field mb-3">
          <span class="col-6">パスワード</span><span class="col-6"><%= f.password_field :password, autocomplete: "current-password" %></span>
        </div>

        <%# if devise_mapping.rememberable? %>
          <!--div class="field"-->
            <%#= f.check_box :remember_me %>
            <%#= f.label :remember_me %>
          <!--/div-->
        <%# end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-info" %>
        </div>
      <% end %>

      <div class="mt-5">
        <%= render "customer/shared/links" %>
      </div>
    </div>
  </div>
</div>