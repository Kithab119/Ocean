<h2>配送先</h2>

<h3>配送先登録</h3>
<%= form_with model: @address, url: addresses_path(@address.id), method: :post do |f| %>
  <table>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :shipping_postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :shipping_address %></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td><%= f.text_field :shipping_name %></td>
    </tr>
  </table>
  <div><%= f.submit "登録する" %></div>
<% end %>

<h3>配送先一覧</h3>
<table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.shipping_postal_code %></td>
        <td><%= address.shipping_address %></td>
        <td><%= address.shipping_name %></td>
        <td><%= link_to "編集する", edit_address_path(address.id) %></td>
        <td><%= link_to "削除する", address_path(address.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>