<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2 class="mt-5">新規登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>

        <div class="field mt-3 mb-3">
          名前　<%= f.text_field :last_name, autofocus: true %>　<%= f.text_field :first_name, autofocus: true %>
        </div>

        <div class="field mb-3">
          カナ　<%= f.text_field :last_name_kana, autofocus: true %>　<%= f.text_field :first_name_kana, autofocus: true %>
        </div>

        <div class="field mb-3">
          郵便番号（ハイフンなし）　<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
        </div>

        <div class="field mb-3">
          住所　<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>

        <div class="field mb-3">
          電話番号（ハイフンなし）　<%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
        </div>

        <div class="field mb-3">
          メールアドレス　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field mb-3">
          パスワード（６文字以上）　<%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field mb-3">
          パスワード（再入力）　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: "btn btn-outline-info" %>
        </div>
      <% end %>

      <div class="mt-5">
        <%= render "customer/shared/links" %>
      </div>
    </div>
  </div>
</div>