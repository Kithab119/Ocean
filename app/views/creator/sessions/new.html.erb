<div class="row justify-content-center pl-3 pr-3">
  <div class="col-sm-6">
    <h1 class="text-center text-info mt-5">作家ログイン</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="row mt-5">
        <div class="col-sm-6 col-12">メールアドレス</div>
        <div class="col-sm-6 col-12"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %></div>
      </div>
      <div class="row mt-3">
        <div class="col-sm-6 col-12">パスワード</div>
        <div class="col-sm-6 col-12"><%= f.password_field :password, autocomplete: "current-password", class: "w-100" %></div>
      </div>
      <%# if devise_mapping.rememberable? %>
        <!--div class="field"-->
          <%#= f.check_box :remember_me %>
          <%#= f.label :remember_me %>
        <!--/div-->
      <%# end %>
      <div class="text-center mt-5"><%= f.submit "ログイン", class: "btn btn-outline-info" %></div>
    <% end %>
    <div class="text-center mt-5"><%= render "creator/shared/links" %></div>
  </div>
</div>