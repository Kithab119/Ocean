<div class="container">
  <h2 class="text-info mt-5 mb-5">マイページ編集</h2>

  <% if @creator.errors.any? %>
    <ul>
      <% @creator.errors.full_messages.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @creator, url: creator_creators_path, method: :patch do |f| %>
    <div class="row">
      <div class="col-2">
        <p><strong>プロフィール画像</strong></p>
      </div>
      <div class="col-10">
        <p><%= f.file_field :profile_image, accept: "image/*" %></p>
      </div>

      <div class="col-2">
        <p><strong>名前</strong></p>
      </div>
      <div class="col-10">
        <p><%= f.text_field :name %></p>
      </div>

      <div class="col-2">
        <p><strong>プロフィール</strong></p>
      </div>
      <div class="col-10">
        <p><%= f.text_area :profile %></p>
      </div>

      <div class="col-2">
        <p><strong>郵便番号（ハイフンなし）</strong></p>
      </div>
      <div class="col-10">
        <p><%= f.text_field :postal_code %></p>
      </div>

      <div class="col-2">
        <p><strong>住所</strong></p>
      </div>
      <div class="col-10">
        <p><%= f.text_field :address %></p>
      </div>

      <div class="col-2">
        <p><strong>電話番号（ハイフンなし）</strong></p>
      </div>
      <div class="col-10">
        <p><%= f.text_field :telephone_number %></p>
      </div>

      <div class="col-2">
        <p><strong>メールアドレス</strong></p>
      </div>
      <div class="col-10">
        <p><%= f.email_field :email %></p>
      </div>
    </div>

    <div><%= f.submit "更新する", class: "btn btn-outline-info" %></div>
  <% end %>
</div>