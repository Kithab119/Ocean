<h2>通知</h2>

<% @notifications.each do |notification| %>
  <% if notification.checked == false %>
    NEW
  <% end %>

  <% if notification.action == "Room" %>
    <p><%= notification.room.making.customer.last_name %> <%= notification.room.making.customer.first_name %>さんからメッセージが届きました</p>

  <% elsif notification.action == "Request" %>
    <p><%= notification.making.customer.last_name %> <%= notification.making.customer.first_name %>さんからリクエストが届きました</p>

  <% elsif notification.action == "Making" %>
    <%= link_to creator_creators_makings_path do %>
      <p><%= notification.order.customer.last_name %> <%= notification.order.customer.first_name %>さんからリクエストが注文されました</p>
      <p><%= link_to "確認", creator_notifications_check_path(notification_id: notification.id) %></p>
    <% end %>

  <% elsif notification.action == "Item" %>
    <p><%= notification.order.customer.last_name %> <%= notification.order.customer.first_name %>さんから「<%= order_detail.item.name %>」が注文されました</p>
    <p><%= link_to "確認", creator_notifications_check_path(notification_id: notification.id) %></p>
  <% end %>
<% end %>