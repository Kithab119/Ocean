<div class="container">
  <h1 class="text-info mt-5 mb-5">Welcome to Ocean</h1>

  <div class="row">
    <div class="col-3">
      <%= image_tag @creator.get_profile_image(200, 200) %>
      <p class="mt-2"><strong><%= link_to @creator.name, creator_creators_path(@creator.id), class: "text-info" %></strong></p>
      <p><%= @creator.profile %></p>
      <%= link_to "出品する", new_creator_item_path, class: "btn btn-outline-info" %>
    </div>

    <div class="col-9 row">
      <% @items.each do |item| %>
        <div class="col-4 mb-3">
          <%= image_tag item.get_image, class: "mw-100 mh-100" %>
          <p>「<strong><%= link_to item.name, creator_item_path(item.id), class: "text-info" %></strong>」</p>
        </div>
      <% end %>
    </div>

  </div>
</div>