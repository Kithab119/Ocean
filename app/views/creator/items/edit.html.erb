<h2>作品情報編集</h2>

<%= form_with model: @item, url: creator_item_path, method: :patch do |f| %>
  <table>
    <tr>
      <th>作品イメージ</th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>作品名</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>作品紹介</th>
      <td><%= f.text_area :introduction %></td>
    </tr>
    <tr>
      <th>カラー</th>
      <td><%= f.collection_select :color_id, @colors, :id, :name %></td>
    </tr>
    <tr>
      <th>サイズ</th>
      <td><%= f.collection_select :size_id, @sizes, :id, :large %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= f.collection_select :genre_id, @genres, :id, :theme %></td>
    </tr>
    <tr>
      <th>スタイル</th>
      <td><%= f.collection_select :style_id, @styles, :id, :where %></td>
    </tr>
    <tr>
      <th>価格（税抜き）</th>
      <td><%= f.text_field :price %></td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td><%= f.radio_button :is_active, :true %>販売中　<%= f.radio_button :is_active, :false %>未販売</td>
    </tr>
  </table>
  <div>
    <%= f.submit "更新する" %>
  </div>
<% end %>